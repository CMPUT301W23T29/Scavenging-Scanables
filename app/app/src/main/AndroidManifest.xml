        <activity
            android:name=".ui.notifications.Others"

            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ScannerActivity">

        </activity>
        <activity android:name=".CameraActivity">

        </activity>

    </application>
    <uses-permission android:name="android.permission.CAMERA"/>

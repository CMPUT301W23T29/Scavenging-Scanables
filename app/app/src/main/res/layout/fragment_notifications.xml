<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Player One"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="-411dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="12345678"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/total_score"
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="60dp" />

            <TextView
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Total Score"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/codes_scanned"
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="60dp" />

            <TextView
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Codes Scanned"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-411dp"
            android:layout_marginTop="150dp">

            <ImageView
                android:id="@+id/n_image_highest_qr"
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="HIGHEST SCORE QR CODE"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp">

            <ImageView
                android:id="@+id/n_image_lowest_qr"
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="Lowest SCORE QR CODE"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ViewQrCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_view_codes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".ui.profile.ProfileFragment">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Player One"
                android:textColor="@color/black"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|center_horizontal"
                android:text="\???"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/total_score"
                    android:layout_width="205dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="\?"
                    android:textColor="@color/black"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-205dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="Total Score"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/codes_scanned"
                    android:layout_width="205dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="\?"
                    android:textColor="@color/black"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-205dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="Scannables Scanned"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="150dp"
                android:layout_marginLeft="-411dp"
                android:layout_marginTop="150dp">

                <ImageView
                    android:id="@+id/n_image_highest_qr"
                    android:layout_width="205dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_question_mark_black_24dp" />

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-205dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="Highest Score"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="150dp"
                android:layout_marginTop="150dp">

                <ImageView
                    android:id="@+id/n_image_lowest_qr"
                    android:layout_width="205dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    app:srcCompat="@drawable/ic_question_mark_black_24dp" />

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-205dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="Lowest Score"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_recycler_view"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/search_bar_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>